<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <title>
            {{ title || 'G-Agency Events' }}
        </title>

        <link rel="preconnect" href="https://fonts.bunny.net" />
        <link
            href="https://fonts.bunny.net/css?family=instrument-sans:400,400i,500,500i,600,600i,700,700i"
            rel="stylesheet"
        />

        {{-- Inertia Head --}}
        @inertiaHead()

        {{-- Vite Assets - Production/Development aware --}}
        @if(app.inProduction)
            {{-- Production: Load from manifest --}}
            @vite(['inertia/app/app.tsx'])
        @else
            {{-- Development: Load from Vite dev server --}}
            @viteReactRefresh()
            @vite(['inertia/app/app.tsx'])
        @end
    </head>

    <body className="min-h-screen w-screen font-sans">
        @inertia()
    </body>
</html>
