[mysqld]
# Disable host cache to avoid deprecated --skip-host-cache warning
host_cache_size = 0

# Character set and collation
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Authentication policy (modern, replaces default_authentication_plugin)
authentication_policy = caching_sha2_password

# PID file location (secure location)
pid-file = /tmp/mysqld.pid

# Performance tuning
max_connections = 200
innodb_buffer_pool_size = 256M

# Security
local_infile = 0
