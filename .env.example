#############################################
# üåç Application Configuration
#############################################

# The environment in which the app runs (development, production, or test)
NODE_ENV=development

# The port your AdonisJS app listens on
PORT=3333

# Unique secret key used by AdonisJS for encryption ‚Äî generate via:
# node ace generate:key
APP_KEY=YOUR_APP_KEY_HERE

# Host and base URL of your application
HOST=localhost
APP_URL=http://localhost:3333

# Logging level (error, warn, info, debug)
LOG_LEVEL=info


#############################################
# üç™ Session Configuration
#############################################

# Storage method for sessions (cookie, file, redis, etc.)
SESSION_DRIVER=cookie


#############################################
# üóÑÔ∏è Database (MySQL)
#############################################

# Database connection details
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_database_password
DB_DATABASE=events_platform


#############################################
# üìß Email (Brevo / SendinBlue / Mailersend)
#############################################

# SMTP credentials for your email service provider
# For Brevo/SendinBlue: https://app.brevo.com/settings/keys/smtp
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Default sender information
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="Your App Name"

# Default reply-to information
MAIL_REPLY_TO_ADDRESS=support@yourdomain.com
MAIL_REPLY_TO_NAME="Support Team"


#############################################
# üíæ File Storage
#############################################

# Disk driver for uploads (fs = local file system, s3, gcs, etc.)
DRIVE_DISK=fs


#############################################
# üîë Admin API Token
#############################################

# Used by mobile or external apps to authenticate admin access
# Generate a secure token manually or programmatically
ADMIN_API_TOKEN=your_admin_api_token_here

# Token expiration time (in hours). Leave empty for permanent tokens.
ADMIN_TOKEN_EXPIRES_IN=720


#############################################
# üîç Typesense Search Engine
#############################################

# Enable or disable Typesense integration
TYPESENSE_ENABLED=true

# Typesense connection details
TYPESENSE_HOST=localhost
TYPESENSE_PORT=8108
TYPESENSE_PROTOCOL=http

# Your Typesense API key (found in your Typesense dashboard)
TYPESENSE_API_KEY=your_typesense_api_key_here
