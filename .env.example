# Application
NODE_ENV=development
PORT=3333
APP_KEY=
HOST=localhost
LOG_LEVEL=info
APP_URL=http://localhost:3333

# Session
SESSION_DRIVER=cookie

# Database (MySQL)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_DATABASE=events_platform

# Email (Brevo/SendinBlue)
# Pour obtenir ces infos : https://app.brevo.com/settings/keys/smtp
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USERNAME=votre_email@example.com
SMTP_PASSWORD=votre_cle_api_brevo
MAIL_FROM_ADDRESS=noreply@votredomaine.com
MAIL_FROM_NAME="Plateforme d'événements"
MAIL_REPLY_TO_ADDRESS=contact@votredomaine.com
MAIL_REPLY_TO_NAME="Support Client"

# Admin API Token (pour l'app mobile)
# Ce token unique permet l'accès API sur plusieurs appareils
ADMIN_API_TOKEN=votre_token_admin_secret_genere_aleatoirement

# Token Expiry (optionnel - en heures)
# Si défini, le token devra être régénéré après cette durée
# Laisser vide pour un token permanent
ADMIN_TOKEN_EXPIRES_IN=720