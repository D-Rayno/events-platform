{
  "extends": "@adonisjs/tsconfig/tsconfig.client.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "module": "ESNext",
    "jsxImportSource": "vue",
    "paths": {
      "~/*": ["./*"],
      "#ui": ["./components/ui"],
      "#ui/*": ["./components/ui/*"],
      "#shared": ["./components/shared"],
      "#shared/*": ["./components/shared/*"],
      "#layouts": ["./components/layouts"],
      "#layouts/*": ["./components/layouts/*"],
      "#composables": ["./composables"],
      "#composables/*": ["./composables/*"],
      "#services": ["./services"],
      "#services/*": ["./services/*"],
      "#stores": ["./stores"],
      "#stores/*": ["./stores/*"],
      "#lib": ["./lib"],
      "#lib/*": ["./lib/*"],
      "#types": ["./types"],
      "#types/*": ["./types/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.vue", "app/ssr.tsx", "app/app.tsx", "components/layouts/AppLayout.tsx", "components/layouts/AuthLayout.tsx", "components/shared/FlashMessage.tsx", "components/shared/Header.tsx"]
}